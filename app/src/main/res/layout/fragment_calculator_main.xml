<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/window"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="15dp"
        android:background="@color/white"
        android:text="@string/btnZero"
        android:textColor="@color/black"
        android:textSize="100sp"
        android:gravity="end"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnRightSide"
         />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/red"
        android:text="@string/btnClear"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnZero"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/light_grey"
        android:text="@string/btnZero"
        android:textColor="@color/blue"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnClear"
        app:layout_constraintStart_toEndOf="@+id/btnClear" />

    <Button
        android:id="@+id/btnDot"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/light_grey"
        android:text="@string/btnDot"
        android:textColor="@color/blue"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnZero"
        app:layout_constraintStart_toEndOf="@+id/btnZero" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="67dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/light_grey"
        android:text="@string/btnEqual"
        android:textColor="@color/blue"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnPlus"
        app:layout_constraintStart_toEndOf="@+id/btnPlus"
        app:layout_constraintTop_toTopOf="@id/btnMultiply" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/dark_grey"
        android:text="@string/btnPlus"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnDot"
        app:layout_constraintStart_toEndOf="@+id/btnDot" />

    <Button
        android:id="@+id/btnOne"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:backgroundTint="@color/light_grey"
        android:text="@string/btnOne"
        android:textColor="@color/blue"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/btnClear"
        app:layout_constraintStart_toStartOf="@id/btnClear" />

    <Button
        android:id="@+id/btnTwo"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/light_grey"
        android:text="@string/btnTwo"
        android:textColor="@color/blue"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/btnClear"
        app:layout_constraintStart_toEndOf="@id/btnOne" />

    <Button
        android:id="@+id/btnThree"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/light_grey"
        android:text="@string/btnThree"
        android:textColor="@color/blue"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/btnClear"
        app:layout_constraintStart_toEndOf="@id/btnTwo" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/dark_grey"
        android:text="@string/btnMinus"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@id/btnClear"
        app:layout_constraintStart_toEndOf="@id/btnThree" />

    <Button
        android:id="@+id/btnFour"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:backgroundTint="@color/light_grey"
        android:text="@string/btnFour"
        android:textColor="@color/blue"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/btnOne"
        app:layout_constraintStart_toStartOf="@id/btnClear" />

    <Button
        android:id="@+id/btnFive"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/light_grey"
        android:text="@string/btnFive"
        android:textColor="@color/blue"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/btnOne"
        app:layout_constraintStart_toEndOf="@id/btnFour" />

    <Button
        android:id="@+id/btnSix"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/light_grey"
        android:text="@string/btnSix"
        android:textColor="@color/blue"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/btnOne"
        app:layout_constraintStart_toEndOf="@id/btnFive" />

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/dark_grey"
        android:text="@string/btnMultiply"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnOne"
        app:layout_constraintStart_toEndOf="@id/btnSix" />

    <Button
        android:id="@+id/btnSeven"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:backgroundTint="@color/light_grey"
        android:text="@string/btnSeven"
        android:textColor="@color/blue"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/btnFour"
        app:layout_constraintStart_toStartOf="@id/btnClear" />

    <Button
        android:id="@+id/btnEight"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/light_grey"
        android:text="@string/btnEight"
        android:textColor="@color/blue"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/btnFour"
        app:layout_constraintStart_toEndOf="@id/btnSeven" />

    <Button
        android:id="@+id/btnNine"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/light_grey"
        android:text="@string/btnNine"
        android:textColor="@color/blue"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/btnFour"
        app:layout_constraintStart_toEndOf="@id/btnEight" />

    <Button
        android:id="@+id/btnDivision"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/dark_grey"
        android:text="@string/btnDivision"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/btnFour"
        app:layout_constraintStart_toEndOf="@id/btnNine" />

    <Button
        android:id="@+id/btnSquare"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/dark_grey"
        android:text="@string/btnSquare"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/btnFour"
        app:layout_constraintStart_toEndOf="@id/btnDivision" />

    <Button
        android:id="@+id/btnFact"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:backgroundTint="@color/dark_grey"
        android:text="@string/btnFact"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSeven"
        app:layout_constraintStart_toStartOf="@id/btnClear" />

    <Button
        android:id="@+id/btnLeftSide"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/dark_grey"
        android:text="@string/btnLeftSide"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/btnSeven"
        app:layout_constraintStart_toEndOf="@id/btnFact" />

    <Button
        android:id="@+id/btnRightSide"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/dark_grey"
        android:text="@string/btnRightSide"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/btnSeven"
        app:layout_constraintStart_toEndOf="@id/btnLeftSide" />

    <Button
        android:id="@+id/btnRemains"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/dark_grey"
        android:text="@string/btnRemains"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/btnSeven"
        app:layout_constraintStart_toEndOf="@id/btnRightSide" />

    <Button
        android:id="@+id/btnExponent"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/dark_grey"
        android:text="@string/btnExponent"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/btnSeven"
        app:layout_constraintStart_toEndOf="@id/btnRemains" />
</androidx.constraintlayout.widget.ConstraintLayout>